{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "source venv/bin/activate && pip install --use-pep517 .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "source venv/bin/activate && tox",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ]
}
